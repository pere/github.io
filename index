            function plot_letter_2(letter, path_obj) 
            {

                console.info(letter)
                if (letter == 'O')
                    rainbow = true;
                else
                    rainbow = false;

                
                var color = d3.scaleLinear()
                    .range(["yellow", "purple", "green"])
                    .domain([0, 5, 15])
                    .interpolate(d3.interpolateHclLong);

                var color = d3.scaleLinear()
                    .range(["yellow", "purple", "green"])
                    .domain([0, 12, 25])
                    .interpolate(d3.interpolateHsl);

                var duplicated_in_rect = app.g_rect.selectAll('.duplicated_rects')
                    //.data(path_obj, function(d) {
                    .data(path_obj, function(d) {
                        return d.data;
                    });

                var duplicated_rects = duplicated_in_rect
                    .enter()
                    .append("rect")
                    .attr('code', function(d) {
                        return d.code;
                    })
                    .classed('duplicated_rects', true)
                    .attr('stroke', 'white')
                    .attr('stroke-width', 1)
                    .attr('stroke-opacity', 0.2)
                    .attr("x", function(d) {

                        return d.cx
                    })
                    .attr("y", function(d) {
                        return d.cy
                    })
                    .attr("width", rect_width)
                    .attr("height", rect_width)
                    .attr('fill', function() {
                        return 'gold';
                    })
                    .style('opacity', 1);



                var excluded = d3.selectAll(".g_rect rect").filter(function(d, i) {

                    if (d3.select(this).classed('duplicated_rects'))
                        return d3.select(this)
                })


                var not_excluded = d3.selectAll(".g_rect rect").filter(function(d, i) {

                    if (!d3.select(this).classed('duplicated_rects'))
                        return d3.select(this)
                })





                var myColor = d3.scaleSequential()
                    .interpolator(d3.interpolateRainbow)
                    .domain([1, 100]);
               

        

            if (rainbow == true) {

               
                var t2 = d3.timer(function(elapsed) {

                    excluded.transition()
                        .delay(
                            function(d, i) {
                                //  return getRandomArbitrary(2,10)
                                console.warn(i)
                                return i*10
                            })
                      

                    .style("fill", function(d, i) {

                        //return color(getRandomArbitrary(0, 55))
                        //return myColor(getRandomArbitrary(0, 100));
                        return myColor((i + elapsed / 50));

                    })

               
                        //excluded.attr('fill', 'white')
                        console.log(elapsed)
                    
                         if (letter == 'O' && elapsed > 5500)
                         {

                        var shuffled = not_excluded._groups[0].sort(function() {
                                            return Math.random() - 0.5
                                        });
                        
                        t2.stop();
                        var sum_secs=0;
                        excluded.transition()
                        .duration(700)
                                                        .delay(function(d, i) {
                                                            sum_secs+=i*100
                                                            return i*5

                                                        })
                        .attr('rx',15).attr('ry',15)
                        .style('stroke-width',1).style('stroke-color','white')
                        excluded.transition()
                                                        .duration(4000)
                                                        .delay(function(d, i) {
                                                            

                                                             return i*100
                                                             //return getRandomArbitrary(2, 900)
                                                            //return getRandomArbitrary(2, 250)
                                                        })   
                                                        
                                                        //.attr('x', app.height)
                                                        .attr('width',rect_width+5)
                                                        .attr('height',rect_width+5)
                                                        .attr('y', app.height)
     
                        console.log(sum_secs)                                                   
                          setTimeout(function()
                          {
                            d3.select('.g_rect').attr("style", "")
                            $('.duplicated_rects').remove();


                            console.warn('done!')
                            
